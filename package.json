{
  "name": "@sprucelabs/sprucebot-llm",
  "description": "Build conversational bots that can do anything with the help of ChatGPT and other LLM's.",
  "skill": {
    "namespace": "sprucebot-llm",
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-core-schemas",
      "eta"
    ]
  },
  "version": "13.1.8",
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "require": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    }
  },
  "keywords": [
    "llm",
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "generate.samples": "node ./build/fineTuningSprucebot/generateSamples.js ~/output.json",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w",
    "chat": "node ./build/chat.js",
    "chat.images": "node ./build/chatWithImages.js"
  },
  "dependencies": {
    "@sprucelabs/error": "^8.1.4",
    "@sprucelabs/mercury-event-emitter": "^46.1.2",
    "@sprucelabs/mercury-types": "^49.1.5",
    "@sprucelabs/schema": "^33.1.5",
    "@sprucelabs/spruce-skill-utils": "^34.0.5",
    "eta": "3.5.0",
    "openai": "^6.16.0"
  },
  "resolutions": {
    "eta": "3.5.0"
  },
  "devDependencies": {
    "@regressionproof/cli": "^0.8.0",
    "@regressionproof/jest-reporter": "^0.8.0",
    "@sprucelabs/esm-postbuild": "^9.0.15",
    "@sprucelabs/jest-json-reporter": "^10.0.21",
    "@sprucelabs/resolve-path-aliases": "^4.0.15",
    "@sprucelabs/semantic-release": "^6.0.0",
    "@sprucelabs/test": "^11.1.2",
    "@sprucelabs/test-utils": "^7.2.5",
    "@types/node": "^25.0.10",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      "@regressionproof/jest-reporter"
    ]
  }
}
